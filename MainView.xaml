<Window x:Class="ValorantPicks.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Model="clr-namespace:ValorantPicks.Model"
        xmlns:local="clr-namespace:ValorantPicks"
        xmlns:viewModel="clr-namespace:ValorantPicks.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
        ResizeMode="NoResize"

        Title="Valorant Picks" Height="300" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues" ObjectType="{x:Type Model:Mapas}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Model:Mapas"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Background="#FD4556">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <Grid Background = "#000000"
            Grid.ColumnSpan = "5"
              Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        <TextBlock Text="VALORANT PICKS"
                   Foreground="White"
                   Grid.Column="1"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontFamily="Fonts/#Koulen"
                   FontWeight="Medium"
                   FontSize="20"/>

        <ComboBox x:Name="ComboMapas" Grid.Row="1" ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  Grid.Column="1" SelectedItem="{Binding SelectedMapa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="1" Grid.Column="2" Margin="10 0 0 0"  Content="Pesquisar" Click="Pesquisar_OnClick"/>
        <TextBox Grid.ColumnSpan="5" Grid.Row="2" Margin="5 5 5 5" IsReadOnly="True" 
                 Text="{Binding Informacoes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
    </Grid>
</Window>
